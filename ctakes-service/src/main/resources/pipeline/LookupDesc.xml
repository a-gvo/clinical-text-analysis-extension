<lookupSpecification>
	<!--  Defines what dictionaries will be used in terms of implementation specifics and metaField configuration. -->
	<dictionaries>
		<dictionary id="DICT_HPO" externalResourceKey="HPOIndexReader" caseSensitive="false">
			<implementation>
				<luceneImpl/>
			</implementation>
			<lookupField fieldName="name"/>
			<metaFields>
				<metaField fieldName="id"/>
				<metaField fieldName="nameSpell"/>
				<metaField fieldName="nameStub"/>
				<metaField fieldName="nameExact"/>
				<metaField fieldName="namePrefix"/>
				<metaField fieldName="nameSort"/>
				<metaField fieldName="synonym"/>
				<metaField fieldName="synonymSpell"/>
				<metaField fieldName="synonymStub"/>
				<metaField fieldName="synonymExact"/>
				<metaField fieldName="synonymPrefix"/>
				<metaField fieldName="synonymSort"/>
				<metaField fieldName="comment"/>
			</metaFields>
		</dictionary>
	
	</dictionaries>
	<!-- Binds together the components necessary to perform the complete lookup logic start to end. -->
	<lookupBindings>
		<lookupBinding>
			<dictionaryRef idRef="DICT_HPO"/>
			<lookupInitializer className="org.apache.ctakes.dictionary.lookup.ae.FirstTokenPermLookupInitializerImpl">
				<properties>
					<property key="textMetaFields" value="synonym|nameSpell|nameStub|nameExact|namePrefix|nameSort|synonymSpell|synonymStub|synonymExact|synonymPrefix|synonymSort|comment"/>
					<property key="maxPermutationLevel" value="7"/>
					<property key="windowAnnotations" value="org.apache.ctakes.typesystem.type.textspan.Sentence"/>
                    <!--<property key="windowAnnotations" value="org.apache.ctakes.typesystem.type.textspan.LookupWindowAnnotation"/>  -->
					<property key="exclusionTags" value="VB,VBD,VBG,VBN,VBP,VBZ,CC,CD,DT,EX,LS,MD,PDT,POS,PP,PP$,RP,TO,WDT,WP,WPS,WRB"/>
				</properties>
			</lookupInitializer>
			<lookupConsumer className="org.phenotips.textanalysis.internal.HPOConsumer">
				<properties>
					<property key="codingScheme" value="HPO"/>
					<property key="idname" value="id"/>
				</properties>
			</lookupConsumer>
		</lookupBinding>
		
	</lookupBindings>
</lookupSpecification>
